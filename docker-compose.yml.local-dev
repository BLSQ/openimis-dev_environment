version: "2.4"
services:
  backend:
    build:
      context: ./openimis-be_py
      dockerfile: ../Dockerfile
    image: openimis/backend:${PROJECT_NAME:-dev}
    volumes:
      - ./openimis-be_py/:/openimis-be/
      - ./modules/:/modules/
    entrypoint: ["tail", "-f", "/dev/null"]
  restapi:
    entrypoint: /app/entrypoint.sh
    environment:
      - DB_HOST=${DB_HOST}
      - DB_NAME=${DB_NAME}
      - DB_USER=${DB_USER}
      - DB_PASSWORD=${DB_PASSWORD}
