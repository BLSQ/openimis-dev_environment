version: "2.4"
services:
  backend:
    build:
      context: ./openimis-be_py
      dockerfile: ./Dockerfile
      args:
        - DB_ENGINE=${DB_ENGINE:-django.db.backends.postgresql}
    volumes:
      - ./openimis-be_py/:/openimis-be/
      - ./modules/:/modules/
    entrypoint: ["tail", "-f", "/dev/null"]
  restapi:
    environment:
      - DB_HOST=${DB_HOST}
      - DB_NAME=${DB_NAME}
      - DB_USER=${DB_USER}
      - DB_PASSWORD=${DB_PASSWORD}
